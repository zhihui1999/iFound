<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ChengYuan_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/nanren" />

    <TextView
        android:id="@+id/ChengYuan_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/ChengYuan_icon"
        android:layout_gravity="center"
        android:textColor="#808080"
        android:text="名字"
        android:textSize="15sp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ChengYuan_name"
        android:background="@drawable/btn2"
        android:text="群组成员"
        android:textColor="#ffff"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/ChengYuan_phone"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toEndOf="@+id/ChengYuan_icon"
        android:layout_marginTop="40dp"
        android:textColor="#808080"
        android:textSize="13sp"
        android:text="TextView" />


    <ImageView
        android:id="@+id/ChengYuan_edit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="310dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/xiugai" />


</RelativeLayout>
